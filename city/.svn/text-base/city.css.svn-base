@charset "utf-8";
.myArea{font-size: 12px;color: #666;padding:0 5px;border:1px solid #e0e0e0; white-space: normal;vertical-align: top;
outline-style: none;resize: none;-moz-border-radius: 5px 5px 5px 5px;-webkit-border-radius: 5px 5px 5px 5px;
border-radius: 5px 5px 5px 5px; cursor:pointer;}

.areaAll{width:300px; border:1px solid #ccc; background:#FFF; display:none; overflow:hidden;position:absolute; z-index:999;}
.areaAll a:hover{color:#ff6600;}
.areaAll .areaTabs ul{list-style:none;margin:0;padding:0;width:305px;height:35px;}
.areaAll .areaTabs ul li{float:left;width:101px;}
.areaAll .areaTabs ul li a{font-size:12px;text-align:center;height:30px; line-height:30px; border-right:1px solid #ccc; border-bottom:1px solid #ccc;  color:#333; text-decoration:none; display:block; background:#f0f0f0;}
.areaAll .areaTabs ul li a.current{ border-bottom:1px solid #fff;background:#fff; color:#ff6600;}

.areaAll .areaList{width:280px; margin:5px;}
.areaAll .areaList div{width:100%;display:none;}
.areaAll .areaList div a{ line-height:25px; display: inline-block;color: #4D4D4D;padding: 0 10px;outline: 0;text-decoration: none;white-space: nowrap;margin-right: 2px;}
.areaAll .areaList div a.current {background-color: #f60;color: #fff;border-radius: 2px;}